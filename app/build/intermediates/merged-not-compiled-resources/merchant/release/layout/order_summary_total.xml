<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/order_summary_total_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_orders_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="9"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_billed_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:id="@+id/totalBilled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="Rs.14567"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_paid_orders_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalPaidOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="8"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_paid_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:id="@+id/totalPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="Rs.560"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_unpaid_orders_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalUnPaidOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="1"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="@string/total_unpaid_label"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:layout_marginLeft="30dp"
                    />

                <TextView
                    android:id="@+id/totalUnPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:text="Rs.13,456"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
         