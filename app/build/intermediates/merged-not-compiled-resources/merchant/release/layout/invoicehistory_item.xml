<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/invoicehistory_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/FontMedium"
                        android:id="@+id/invoiceMerchantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        tools:text="Rajesh Badgeri" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/com_accountkit_input_text_padding_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="@string/invoice_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:text="@string/invoice_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/invoiceDueDate_label"
                            android:text="@string/due_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:text="@string/billing_period_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/invoicePaidDateLabel"
                            android:text="@string/paid_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:id="@+id/addressLine1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/invoiceNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="I Floor, Block B" />
                        <TextView
                            android:id="@+id/invoiceDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="I Floor, Block B" />
                        <TextView
                            android:id="@+id/invoiceDueDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="I Floor, Block B" />

                        <TextView
                            android:id="@+id/invoiceInvoicePeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="I Floor, Block B" />

                        <TextView
                            android:id="@+id/invoicePaidDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="I Floor, Block B" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="right"
                        android:id="@+id/invoiceAmountLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text="\u20b9"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/invoiceAmount"
                            style="@style/FontMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            tools:text="2,194" />

                    </LinearLayout>

                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/invoicePaidStatusText"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/payment_paid_label"
                        android:textColor="@color/accent"
                        android:textSize="16sp" />

                    <TextView
                        android:visibility="gone"
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:id="@+id/invoiceNotPaidStatusText"
                        android:layout_marginTop="16dp"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/payment_un_paid_label"
                        android:textColor="@color/warning_red"
                        android:textSize="16sp" />
                </LinearLayout>




                </LinearLayout>


            </FrameLayout>

        </LinearLayout>



            <View
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>

            <Button
                android:visibility="gone"
                android:id="@+id/viewBills"
                android:textColor="@color/text_secondary"
                android:text="@string/view_bill_label"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider">
            </View>
        </LinearLayout>

    </FrameLayout>

         