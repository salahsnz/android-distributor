<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
    

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground" android:tag="layout/vendor_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.zopnote.android.merchant.util.CircularNetworkImageView
            android:id="@+id/profilePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_hollow_gray_20_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                style="@style/FontMedium"
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                tools:text="Manjunath Reddy" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sri Lakshmi News Agency"
                android:maxLines="2"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:paddingRight="2dp"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:id="@+id/contactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="+91 9746224227"
                android:maxLines="1"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:ellipsize="end" />

                <ImageView
                    android:id="@+id/messageWhatsApp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_whatsapp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
         