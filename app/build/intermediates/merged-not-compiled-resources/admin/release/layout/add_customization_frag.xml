<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

                 

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/add_customization_frag_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/name"
                style="@style/FontMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                tools:text="Times of india" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_payment_mode_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupPaymentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioBtnAnnualSubscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/annual_subscription_label" />

                    <RadioButton
                        android:id="@+id/radioBtnRegularSubscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/regular_subscription_label" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/annualSubscriptionDateSelectLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/annual_subscription_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_start_date_label"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/startDatePickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/startDatePicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:text="@string/select_date_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:tint="@color/gray_50_opaque"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/subscription_end_date_label"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/endDatePickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/endDatePicker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusable="true"
                        android:text="@string/select_date_label"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/gray_50_opaque"
                        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/paperPricingModeSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pricing_type_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupPricingMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioBtnPaperDailyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_price_label" />

                    <RadioButton
                        android:id="@+id/radioBtnPaperMonthlyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fixed_monthly_price_label" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/magazinePricingModeSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/per_issue_price_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:maxLines="1"
                        android:text="\u20b9"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/perIssuePrice"
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned|numberDecimal"
                        android:maxLines="1"
                        android:paddingRight="32dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="5"/>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryDaysAndPricingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_days_and_price_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/deliveryDaysAndPriceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--uncomment to preview-->
                    <!--<include tools:layout="@layout/add_delivery_days_and_price_item"/>-->
                    <!--<include tools:layout="@layout/add_delivery_days_item"/>-->
                    <!--<include tools:layout="@layout/add_price_item"/>-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deliveryChargeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/rounded_gray_rectangle_border">

                <TextView
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_charge_label"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupDeliveryCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioBtnAddDeliveryCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_delivery_charge_label" />

                    <RadioButton
                        android:id="@+id/radioBtnNoDeliveryCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_delivery_charge_label" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/deliveryChargeAmountLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:maxLines="1"
                        android:text="\u20b9"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/deliveryCharge"
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned|numberDecimal"
                        android:maxLines="1"
                        android:paddingRight="32dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="5"/>
                </LinearLayout>

            </LinearLayout>


            <!--save-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/saveSubscriptionChangesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="24dp"
                    android:text="@string/save_changes_label"
                    android:theme="@style/NormalButton" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

         