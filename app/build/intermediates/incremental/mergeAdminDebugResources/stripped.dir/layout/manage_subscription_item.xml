<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/manage_subscription_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <!-- Right margin to support overflow icon overlaid in frame -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="Times of India" />

                <TextView
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_cancel_red_24dp"
                    android:id="@+id/customizedTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="8dp"
                    android:text="@string/customized"
                    android:background="@drawable/rounded_gray_rectangle_solid_bg"
                    android:drawableEnd="@drawable/ic_cancel_red_24dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/startDateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date_label"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    tools:text="2 Aug 2018" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/endDateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date_label"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    tools:text="2 Aug 2018" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_label"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    tools:text="Extra copy" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pausesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pause_label"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/pausesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/divider" />

        </LinearLayout>


        <ImageView
            android:id="@+id/subscriptionActionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:tint="@color/gray_50_opaque"
            app:srcCompat="@drawable/ic_more_vert_black_16dp" />

    </FrameLayout>

         