        </activity>
        <activity
            android:name=".merchantsetup.MerchantProfileActivity">
        </activity>
        <activity
            android:name=".merchantsetup.MerchantKYCActivity">
        </activity>
        <activity
            android:name=".merchantsetup.MerchantBankInfoActivity">
        </activity>
        <activity
            android:name=".merchantsetup.ShopSetupActivity">
