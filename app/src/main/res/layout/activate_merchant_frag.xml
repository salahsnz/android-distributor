<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentView"
        android:orientation="vertical">

        <!--android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                /-->
        <!--/android.support.design.widget.AppBarLayout-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ll_register_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant Name"
                            android:layout_marginLeft="2dp"/>

                        <EditText
                            android:id="@+id/merchantName"
                            style="@style/FontMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:paddingRight="32dp"
                            tools:text="Salah"
                            android:inputType="textPersonName"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant Business Name"
                            android:layout_marginLeft="2dp"/>

                        <EditText
                            android:id="@+id/merchantBusinessName"
                            style="@style/FontMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:paddingRight="32dp"
                            tools:text="Navya Agency"
                            android:inputType="textPersonName"/>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:layout_marginLeft="2dp"/>

                        <EditText
                            android:id="@+id/editTXTmerchantMobile"
                            style="@style/FontMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:paddingRight="32dp"
                            tools:text="9745322323"
                            android:inputType="numberSigned|numberDecimal"/>
                    </LinearLayout>


                    <Button
                        android:id="@+id/submitActivateMerchant"
                        android:theme="@style/NormalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:text="@string/activate_merchant_label"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <include
                    android:id="@+id/emptyView"
                    layout="@layout/no_content_error" />

                <include
                    android:id="@+id/networkErrorView"
                    layout="@layout/network_error" />

                <include
                    android:id="@+id/loadingView"
                    layout="@layout/loading_view" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
