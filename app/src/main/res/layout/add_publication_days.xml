<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radioGroupPublicationDays"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sunday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Monday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Tuesday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Wednesday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Thursday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Friday" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Saturday" />
</RadioGroup>

