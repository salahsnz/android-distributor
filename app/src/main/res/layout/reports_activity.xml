<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:background="@color/gray_bg"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:text="@string/select_report_label"/>

                <include android:id="@+id/onboardingReport"
                layout="@layout/reports_activity_list_item" />

                <include android:id="@+id/paymentsReport"
                    layout="@layout/reports_activity_list_item" />

                <include android:id="@+id/subscriptionsReport"
                    layout="@layout/reports_activity_list_item" />

                <include android:id="@+id/draftInvoiceReport"
                    layout="@layout/reports_activity_list_item" />

                <include android:id="@+id/settlementReport"
                    layout="@layout/reports_activity_list_item" />

                <include android:id="@+id/orderSummaryReport"
                    layout="@layout/reports_activity_list_item" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>