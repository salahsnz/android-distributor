<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_register_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merchant Name"
                        android:layout_marginLeft="2dp"/>

                    <EditText
                        android:id="@+id/merchantName"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingRight="32dp"
                        tools:text="Salah"
                        android:inputType="textPersonName"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Merchant Business Name"
                        android:layout_marginLeft="2dp"/>

                    <EditText
                        android:id="@+id/merchantBusinessName"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingRight="32dp"
                        tools:text="Navya Agency"
                        android:inputType="textPersonName"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:layout_marginLeft="2dp"/>

                    <EditText
                        android:id="@+id/merchantMobile"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingRight="32dp"
                        tools:text="9745322323"
                        android:inputType="numberSigned|numberDecimal"/>
                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:layout_marginLeft="2dp"/>

                    <EditText
                        android:id="@+id/merchantState"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingRight="32dp"
                        tools:text="Karnataka"
                        android:inputType="textPostalAddress"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:layout_marginLeft="2dp"/>

                    <EditText
                        android:id="@+id/merchantCity"
                        style="@style/FontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingRight="32dp"
                        tools:text="Bangalore"
                        android:inputType="textPostalAddress"/>
                </LinearLayout>
                <Button
                    android:id="@+id/registerNext"
                    android:theme="@style/NormalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:text="@string/register"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/customerInfo"
                    style="@style/FontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:gravity="center"
                    android:textColor="@color/warning_red"
                    android:textSize="14sp"/>

            </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_registered"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">


                    <ImageView
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_register_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_100"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:text="@string/registered" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:id="@+id/register_note"
                        style="@style/FontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_50"
                        android:textSize="14sp"
                        android:text="@string/contact_enable_merchant"
                        />

                    <Button
                        android:id="@+id/finishReg"
                        android:theme="@style/NormalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="24dp"
                        android:text="@string/button_ok"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center"/>

            </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
