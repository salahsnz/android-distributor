<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="24dp"
            app:srcCompat="@drawable/ic_cloud_off_black_24dp"
            android:tint="@color/white"
            android:background="@drawable/circle_gray_20_bg"/>

        <TextView
            android:id="@+id/networkErrorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/text_secondary"
            tools:text="Error"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/networkErrorRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:theme="@style/SubduedButton"
            android:text="@string/network_error_retry"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

    </LinearLayout>

</layout>