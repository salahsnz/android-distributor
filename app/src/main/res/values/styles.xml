<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:windowContentOverlay">@drawable/header_shadow</item>
    </style>

    <style name="AppTheme.DrawerLayout" />

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Fonts -->
    <style name="FontBold">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontMedium">
        <item name="android:typeface">sans</item>
    </style>

    <style name="FontThin">
        <item name="android:typeface">sans</item>
    </style>

    <!-- Facebook AccountKit -->
    <style name="AccountKitTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_status_bar_color">@color/primary_dark</item>
        <item name="com_accountkit_button_background_color">@color/accent</item>
        <item name="com_accountkit_icon_color">@color/gray_50_opaque</item>
        <item name="com_accountkit_input_border_color">@android:color/transparent</item>
        <item name="com_accountkit_input_text_color">@color/text_primary</item>
        <item name="com_accountkit_input_accent_color">@color/gray_50_opaque</item>
        <item name="com_accountkit_input_background_color">@color/gray_bg</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NormalButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SubduedButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/gray_bg</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.Zopnote.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="OtpWindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/blue_300</item>
        <item name="trackTint">@color/white</item>
    </style>

</resources>